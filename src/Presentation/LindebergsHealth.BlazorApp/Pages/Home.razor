@page "/"
@using Syncfusion.Blazor.Schedule

<PageTitle>Kalender</PageTitle>

<SfSchedule TValue="AppointmentData" Height="650px">
    <ScheduleEventSettings TValue="AppointmentData" DataSource="@DataSource" />
</SfSchedule>

@code {
    public class AppointmentData
    {
        public int Id { get; set; }
        public string Subject { get; set; }
        public DateTime StartTime { get; set; }
        public DateTime EndTime { get; set; }
        public bool IsAllDay { get; set; }
    }

    List<AppointmentData> DataSource = new List<AppointmentData>
    {
        new AppointmentData
        {
            Id = 1,
            Subject = "Projektstart",
            StartTime = DateTime.Today.AddHours(10),
            EndTime = DateTime.Today.AddHours(12),
            IsAllDay = false
        },
        new AppointmentData
        {
            Id = 2,
            Subject = "Team Meeting",
            StartTime = DateTime.Today.AddDays(1).AddHours(14),
            EndTime = DateTime.Today.AddDays(1).AddHours(15),
            IsAllDay = false
        }
    };
}